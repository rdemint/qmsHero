<Page x:Class="QmsHero.View.TestPage1"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:QmsHero.View"
      xmlns:core ="clr-namespace:QmsDoc.Core;assembly=QmsDoc"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="TestPage1"
        DataContext="{Binding TestViewModel1, Source={StaticResource ViewModelLocator}}"
      ShowsNavigationUI="False"
      >
    <StackPanel
        Background="AliceBlue">
        <StackPanel.Resources>
            <ResourceDictionary>
                <ResourceDictionary.MergedDictionaries>
                    <ResourceDictionary Source="Resources/DocActionControlFolderPicker.xaml"/>
                    <ResourceDictionary Source="Resources/DocActionControlTextbox.xaml"/>
                    <ResourceDictionary Source="Resources/DocAction.xaml"/>
                </ResourceDictionary.MergedDictionaries>
            </ResourceDictionary>
            
    
        </StackPanel.Resources>
        <ListView
            ItemsSource="{Binding ActionList}"/>
    </StackPanel>
</Page>
