<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:QmsHero.View"
                    xmlns:core="clr-namespace:QmsDoc.Core;assembly=QmsDoc">
    <DataTemplate
        DataType="{x:Type core:DocActionControlTextBox}">
        <StackPanel Orientation="Horizontal">
            <CheckBox IsChecked="{Binding ControlIsEnabled, Mode=TwoWay}"/>
            <Label Content="{Binding DocActionName}"/>
            <TextBox 
                MinWidth="200"
                Text="{Binding Mode=TwoWay, Path=DocActionVal}"
                IsEnabled="{Binding ControlIsEnabled}"/>
        </StackPanel>
    </DataTemplate>
</ResourceDictionary>