<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:QmsHero.View.Resources"
                    xmlns:core="clr-namespace:QmsDoc.Core;assembly=QmsDoc"
                    xmlns:controls="clr-namespace:QmsDoc.Controls;assembly=QmsDoc">
    <DataTemplate
        x:Key="DocHeaderDataTemplate"
        DataType="{x:Type core:DocHeader}">
        <StackPanel
            Name="DocHeader">
            <controls:ToggleCheckBox
                DisplayName="Revision"
                ControlValue="{Binding Revision}"/>
            <controls:ToggleCheckBox
                DisplayName="EffectiveDate"
                ControlValue="{Binding EffectiveDate}"/>
            <ComboBox>
                
                <ComboBoxItem>
                    <controls:ToggleCheckBox
                        DisplayName="Logo Path"
                        ControlValue="{Binding LogoPath}"/>
                </ComboBoxItem>
                <ComboBoxItem>
                    <controls:ToggleCheckBox
                        DisplayName="Logo Text"
                        ControlValue="{Binding LogoText}"/>
                </ComboBoxItem>
            </ComboBox>
        </StackPanel>
    </DataTemplate>
</ResourceDictionary>