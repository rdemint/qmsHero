<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:QmsHero.View"
                    xmlns:controls="clr-namespace:QmsDoc.Controls;assembly=QmsDoc"
                    xmlns:core="clr-namespace:QmsDoc.Core;assembly=QmsDoc">
    <DataTemplate
        DataType="{x:Type controls:ControlTextBox2}">
        <UniformGrid>
            <Label Content="This is bound to ComboBox Label"/>
            <TextBox MinWidth="200" Text="{Binding Mode=OneWay, RelativeSource={RelativeSource AncestorType={x:Type ListViewItem}}, Path=DataContext.MyLabel, NotifyOnTargetUpdated=True}"/>
        </UniformGrid>
    </DataTemplate>
</ResourceDictionary>