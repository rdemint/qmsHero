<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:QmsHero.View"
                    xmlns:controls="clr-namespace:QmsDoc.Controls;assembly=QmsDoc"
                    xmlns:core="clr-namespace:QmsDoc.Core;assembly=QmsDoc">
    <DataTemplate
        DataType="{x:Type controls:ControlTextBox2}">
        <StackPanel Orientation="Horizontal">
            <TextBlock Text="{Binding DocActionName}"/>
            <TextBox MinWidth="200" Text="{Binding RelativeSource={RelativeSource TemplatedParent}, Path=MyLabel}"/>
        </StackPanel>
    </DataTemplate>
</ResourceDictionary>