<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:controls="clr-namespace:QmsDoc.Controls;assembly=QmsDoc">

    <ControlTemplate
        x:Key="QCheckBoxTemplate"
        TargetType="{x:Type controls:ControlCheckBox}">
        <StackPanel Orientation="Horizontal">
            <CheckBox IsChecked="{Binding Path=QIsValid, RelativeSource={RelativeSource TemplatedParent}, Mode=TwoWay}"/>
            <Label Content="{Binding Path=QDisplay, RelativeSource={RelativeSource TemplatedParent}, Mode=TwoWay}"/>
        </StackPanel>
    </ControlTemplate>

</ResourceDictionary>