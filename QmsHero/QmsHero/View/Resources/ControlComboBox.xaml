<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:QmsHero.View"
                    xmlns:controls="clr-namespace:QmsDoc.Controls;assembly=QmsDoc">
    <DataTemplate
        DataType="{x:Type controls:ControlComboBox}">
        <StackPanel Orientation="Vertical">
            <TextBlock Text="{Binding MyLabel}"/>
            <ComboBox
                ItemsSource="{Binding ItemList}"
                SelectedItem="{Binding SelectedControl, Mode=TwoWay}"
                >
                <ComboBox.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding Path=DocActionName}"/>
                    </DataTemplate>
                </ComboBox.ItemTemplate>
            </ComboBox>
                <ContentControl 
                Content="{Binding SelectedControl, Mode=TwoWay}"
                Margin="10"
                />
        </StackPanel>
    </DataTemplate>
</ResourceDictionary>