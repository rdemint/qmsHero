<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:controls="clr-namespace:QmsDoc.Controls;assembly=QmsDoc">

    <DataTemplate
        DataType="{x:Type controls:ControlCheckBox}">
        <StackPanel Orientation="Horizontal">
            <CheckBox IsChecked="{Binding Path=ControlIsValid, Mode=TwoWay}"/>
            <Label Content="{Binding Path=DisplayValue}"/>
        </StackPanel>
    </DataTemplate>

</ResourceDictionary>