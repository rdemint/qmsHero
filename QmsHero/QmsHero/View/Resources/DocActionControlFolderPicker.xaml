<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:QmsHero.View.Resources"
                    xmlns:qmsDoc="clr-namespace:QmsDoc.Core;assembly=QmsDoc">
    <DataTemplate
        x:Key="DocActionControlFolderPicker"
        DataType="{x:Type qmsDoc:DocActionControlFolderPicker}">
        <StackPanel Orientation="Horizontal">
            <CheckBox IsChecked="{Binding ControlIsEnabled, Mode=TwoWay}"/>
            <Label Content="{Binding DocActionName}"/>
            <Button 
                Width="100"
                Content="Choose Folder"
                IsEnabled="{Binding ControlIsEnabled}"/>
        </StackPanel>
    </DataTemplate>    
</ResourceDictionary>