<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:QmsHero.View"
                    xmlns:controls="clr-namespace:QmsDoc.Controls;assembly=QmsDoc">
    <DataTemplate
        DataType="{x:Type controls:ControlCheckTextBox}">
        <StackPanel Orientation="Horizontal">
            <CheckBox IsChecked="{Binding ControlIsValid, Mode=TwoWay}"/>
            <Label Content="{Binding DisplayValue}"/>
            <TextBox 
                MinWidth="200"
                Text="{Binding Mode=TwoWay, Path=ControlState}"
                IsEnabled="{Binding ControlIsEnabled}"/>
        </StackPanel>
    </DataTemplate>
</ResourceDictionary>