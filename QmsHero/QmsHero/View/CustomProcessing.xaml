<Page x:Class="QmsHero.View.CustomProcessing"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:QmsHero.View"
      xmlns:qmsDoc="clr-namespace:QmsDoc.Core;assembly=QmsDoc"
      xmlns:resources="Qms"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="CustomProcessing"
      ShowsNavigationUI="False"
      >
    <Page.Resources>
        <ResourceDictionary Source="Resources/DocActionDataTemplate.xaml"/>
    </Page.Resources>
    <Grid
        Background="Azure">
        <TextBlock Text="Custom Processing View" />
        <ListView
            ItemsSource="{Binding Source={StaticResource ViewModelLocator}, Path=CustomProcessingViewModel.DocActionControls}"
            ItemTemplate="{StaticResource DocActionDataTemplate}"
            >
        </ListView>
    </Grid>
</Page>
