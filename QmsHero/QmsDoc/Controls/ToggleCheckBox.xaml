<UserControl x:Class="QmsDoc.Controls.ToggleCheckBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:QmsDoc.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             Name="ToggleCheckBoxRoot"
             >
    <StackPanel
        DataContext="{Binding ElementName=ToggleCheckBoxRoot}"
        Orientation="Horizontal"
        Background="LightGray">
        <CheckBox 
            Name="MyCheckBox"
            IsChecked="True"
            />
        <Label Content="{Binding Path=DisplayName}"/>
        <TextBox
            Name="ToggleCheckBoxTextBox"
            MinWidth="200"
            Text="{Binding Path=ControlValue}"
            IsEnabled="{Binding ElementName=MyCheckBox, Path=IsChecked}"
            ></TextBox>
    </StackPanel>
</UserControl>
